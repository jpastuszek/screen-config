startup_message off

# ensure login shell
shell -bash

# longer buffer 
defscrollback 5000

# try to turn off scroll
termcapinfo xterm* ti@:te@

hardstatus off
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W} %c %{g}]'

